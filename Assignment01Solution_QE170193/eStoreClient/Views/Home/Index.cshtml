@model DataTransfer.LoginRequest

@{
    ViewData["Title"] = "Login Page";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow p-4" style="max-width: 420px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center text-primary fw-bold mb-4">Welcome Back!</h2>
            <p class="text-muted text-center mb-4">Login to access your account</p>

            <!-- Error Message -->
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Success Message -->
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @ViewData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post">
                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Login Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <!-- Register Link -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Don't have an account? <a asp-action="Register" class="text-primary fw-bold">Register now</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}