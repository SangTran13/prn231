@model DataTransfer.MemberRequest

@{
    ViewData["Title"] = "Register Page";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow p-4" style="max-width: 450px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <h2 class="text-center text-primary fw-bold mb-4">Join Us!</h2>
            <p class="text-muted text-center mb-4">Create your account to get started</p>

            <!-- Error Message -->
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Success Message -->
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-center alert-dismissible fade show mb-3" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @ViewData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post">
                <!-- Name Field -->
                <div class="mb-3">
                    <label asp-for="MemberName" class="form-label fw-bold">Name</label>
                    <input asp-for="MemberName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="MemberName" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- City Field -->
                <div class="mb-3">
                    <label asp-for="City" class="form-label fw-bold">City</label>
                    <input asp-for="City" class="form-control" placeholder="Enter your city" />
                    <span asp-validation-for="City" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Country Field -->
                <div class="mb-3">
                    <label asp-for="Country" class="form-label fw-bold">Country</label>
                    <input asp-for="Country" class="form-control" placeholder="Enter your country" />
                    <span asp-validation-for="Country" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Create a strong password" />
                    <span asp-validation-for="Password" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Date of Birth Field -->
                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                    <input asp-for="DateOfBirth" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DateOfBirth" class="text-danger d-block small mt-1"></span>
                </div>

                <!-- Register Button -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

                <!-- Login Link -->
                <div class="text-center">
                    <small class="text-muted">
                        Already have an account? <a asp-action="Index" class="text-primary fw-bold">Login here</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
