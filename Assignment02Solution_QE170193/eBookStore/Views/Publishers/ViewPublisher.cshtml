@model IEnumerable<BusinessObject.Models.Publisher>

@{
    ViewData["Title"] = "Publishers";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Publishers</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Manage Publishers</h1>
        <a asp-action="CreatePublisher" class="btn btn-primary">Add New Publisher</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Publisher Name</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.publisher_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.city)</td>
                    <td>@Html.DisplayFor(modelItem => item.state)</td>
                    <td>@Html.DisplayFor(modelItem => item.country)</td>
                    <td>
                        <a asp-action="EditPublisher" asp-route-id="@item.pub_id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="DeletePublisher" asp-route-id="@item.pub_id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
