@page
@model EStoreClient.Pages.Products.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <div class="text-center mb-3">
            <h3 class="text-primary">Add New Product</h3>
        </div>

        <form method="post">
            <div class="mb-3">
                <label asp-for="ProductAddRequest.ProductName" class="form-label">Product Name</label>
                <input asp-for="ProductAddRequest.ProductName" class="form-control" placeholder="Enter product name">
            </div>

            <div class="mb-3">
                <label asp-for="ProductAddRequest.Weight" class="form-label">Weight</label>
                <input asp-for="ProductAddRequest.Weight" class="form-control" placeholder="Enter weight">
            </div>

            <div class="mb-3">
                <label asp-for="ProductAddRequest.UnitPrice" class="form-label">Unit Price</label>
                <input asp-for="ProductAddRequest.UnitPrice" type="number" class="form-control" placeholder="Enter unit price" min="0" step="0.01">
            </div>

            <div class="mb-3">
                <label asp-for="ProductAddRequest.UnitsInStock" class="form-label">Units In Stock</label>
                <input asp-for="ProductAddRequest.UnitsInStock" type="number" class="form-control" placeholder="Enter stock quantity" min="0">
            </div>

            <div class="mb-3">
                <label asp-for="ProductAddRequest.CategoryId" class="form-label">Category</label>
                <select asp-for="ProductAddRequest.CategoryId" class="form-select">
                    <option value="">-- Select Category --</option>
                    @foreach (var item in Model.listCategory)
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save Product</button>
            <a asp-page="Product" class="btn btn-outline-danger w-100 mt-2">Cancel</a>
        </form>
    </div>
</div>
